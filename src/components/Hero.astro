---
interface Props {
  title: string
  subtitle: string
}

const { title, subtitle } = Astro.props
---

<section class="flex flex-col items-center justify-center py-20 lg:py-32 text-center relative z-10">
  <h1
    class="text-5xl md:text-7xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-neutral-900 to-neutral-600 dark:from-white dark:to-neutral-400 mb-6 py-2"
  >
    {title}
  </h1>
  <p class="text-xl md:text-2xl text-neutral-600 dark:text-neutral-300 max-w-2xl mb-10 leading-relaxed">
    {subtitle}
  </p>

  <div class="flex gap-4">
    <a
      href="https://apps.apple.com/app/unraid-deck/id6757081677"
      class="glass-button px-8 py-4 rounded-full text-lg font-semibold flex items-center gap-2 hover:scale-105 transition-transform"
    >
      <div class="i-simple-icons-appstore text-xl"></div>
      Download on App Store
    </a>
    <a
      href="#features"
      class="px-8 py-4 rounded-full text-lg font-semibold text-neutral-600 dark:text-neutral-400 hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors"
    >
      Learn More
    </a>
  </div>
</section>
